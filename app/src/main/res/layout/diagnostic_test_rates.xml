<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/FormLabel"
        android:text="@string/label_filter_by_sub_category" />

    <Spinner
        android:layout_width="match_parent"
        style="@style/FormSpinner"
        android:layout_height="wrap_content"
        android:prompt="@string/hint_select_sub_category"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/FormLabel"
        android:text="implement sub-category list with rates"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/margin_regular"
            android:paddingLeft="@dimen/padding_large"
            android:paddingRight="@dimen/padding_large"
            android:background="@drawable/button_bg"
            android:textColor="@color/white"
            android:text="@string/label_add_custom" />
    </LinearLayout>


</LinearLayout>
