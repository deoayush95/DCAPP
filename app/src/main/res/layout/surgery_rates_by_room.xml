<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button_sr_by_room">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/FormLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/label_room_wise_rates" />

            <Spinner
                style="@style/FormSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:prompt="@string/hint_specialities" />

            <include layout="@layout/layout_divider_horizontal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/FormLabel"
                    android:hint="@string/label_average_number_of_days"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextField"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/FormLabel"
                    android:text="@string/label_overall_cost"/>
                <include layout="@layout/list_item_room_rates"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/FormLabel"
                    android:text="@string/label_surgery_cost"/>
                <include layout="@layout/list_item_room_rates"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/margin_larger"
                android:text="@string/label_inside_ot"
                android:textSize="@dimen/font_regular" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/FormLabel"
                android:text="Surgeon cost"/>

            <include layout="@layout/form_item_room_visit_rates"
                android:layout_marginBottom="@dimen/margin_medium"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" />

            <include layout="@layout/layout_divider_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/FormLabel"
                android:text="OT Charges"/>

            <include layout="@layout/form_item_room_visit_rates"
                android:layout_marginBottom="@dimen/margin_medium"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" />

            <include layout="@layout/layout_divider_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/FormLabel"
                android:text="Drug, Consumables and Implants"/>

            <include layout="@layout/form_item_room_visit_rates"
                android:layout_marginBottom="@dimen/margin_medium"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" />

            <include layout="@layout/layout_divider_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/FormLabel"
                android:text="Anaesthetist Cost"/>

            <include layout="@layout/form_item_room_visit_rates"
                android:layout_marginBottom="@dimen/margin_medium"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" />

            <include layout="@layout/layout_divider_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/margin_larger"
                android:text="@string/label_outside_ot"
                android:textSize="@dimen/font_regular" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/FormLabel"
                android:text="Room rent"/>

            <include layout="@layout/form_item_room_visit_rates"
                android:layout_marginBottom="@dimen/margin_medium"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" />

            <include layout="@layout/layout_divider_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/FormLabel"
                android:text="Pre and post operations drugs, consumables and medicine"/>

            <include layout="@layout/form_item_room_visit_rates"
                android:layout_marginBottom="@dimen/margin_medium"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" />

            <include layout="@layout/layout_divider_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/FormLabel"
                android:text="Nursing charges"/>

            <include layout="@layout/form_item_room_visit_rates"
                android:layout_marginBottom="@dimen/margin_medium"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" />

            <include layout="@layout/layout_divider_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/FormLabel"
                android:text="Doctor Consultation"/>

            <include layout="@layout/form_item_room_visit_rates"
                android:layout_marginBottom="@dimen/margin_medium"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" />

            <include layout="@layout/layout_divider_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/FormLabel"
                android:text="Giagnostic tests"/>

            <include layout="@layout/form_item_room_visit_rates"
                android:layout_marginBottom="@dimen/margin_medium"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" />

        </LinearLayout>
    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_sr_by_room"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_bg"
        android:textColor="@color/white"
        android:text="@string/submit" />
</RelativeLayout>