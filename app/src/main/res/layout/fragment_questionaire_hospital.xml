<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/hospital_scollview"
    >
    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FormLabel"
            android:text="@string/label_name_hospital"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextField"
            android:layout_marginBottom="@dimen/margin_regular"
            android:hint="@string/hint_enter_name"/>

        <include layout="@layout/layout_divider_horizontal" />

        <include layout="@layout/form_item_gallery_optional" />
        <include layout="@layout/layout_divider_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FormLabel"
            android:text="@string/label_speciality"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_single" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_multi" />
        </RadioGroup>

        <Spinner
            android:layout_width="match_parent"
            style="@style/FormSpinner"
            android:layout_height="wrap_content"
            android:prompt="@string/hint_specialities"/>

        <include layout="@layout/layout_divider_horizontal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                style="@style/FormLabel"
                android:text="@string/label_number_of_beds" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/margin_regular"
                android:layout_marginRight="16dp"

                android:text="@string/label_not_applicable"
                android:onClick="onCheckboxClicked"/>
        </RelativeLayout>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextField"
            android:hint="@string/hint_number_of_beds"/>

        <include layout="@layout/layout_divider_horizontal" />

        <include layout="@layout/form_item_address" />

        <include layout="@layout/layout_divider_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FormLabel"
            android:text="@string/label_email" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextField"
            android:inputType="textEmailAddress"
            android:hint="@string/hint_email" />

        <include layout="@layout/layout_divider_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FormLabel"
            android:text="@string/label_phone_number" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextField"
            android:hint="@string/hint_phone_number" />

        <include layout="@layout/layout_divider_horizontal" />

        <TextView
            style="@style/FormLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Insert Open/Close timing custom view"/>

        <include layout="@layout/layout_divider_horizontal" />

        <TextView
            style="@style/FormLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_awards_and_accreditation"/>

        <include layout="@layout/layout_divider_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FormLabel"
            android:text="@string/label_empanelments"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/FormLabel"
                android:text="@string/label_insurance" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/margin_regular"
                android:layout_marginRight="@dimen/margin_large"
                android:text="@string/label_not_applicable"
                android:onClick="onCheckboxClicked"/>
        </RelativeLayout>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextField"
            android:hint="@string/hint_select_insurance_empanelments"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/FormLabel"
                android:text="@string/label_tpa" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/margin_regular"
                android:layout_marginRight="@dimen/margin_large"
                android:text="@string/label_not_applicable"
                android:onClick="onCheckboxClicked"/>
        </RelativeLayout>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextField"
            android:hint="@string/hint_select_tpa_empanelments"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/FormLabel"
                android:text="@string/label_corporate" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/margin_regular"
                android:layout_marginRight="@dimen/margin_large"
                android:text="@string/label_not_applicable"
                android:onClick="onCheckboxClicked"/>
        </RelativeLayout>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextField"
            android:hint="@string/hint_select_corporate_empanelments"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FormLabel"
            android:text="@string/label_others"/>

        <include layout="@layout/layout_divider_horizontal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/FormLabel"
                android:text="@string/label_guidelines" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/margin_regular"
                android:layout_marginRight="@dimen/margin_large"
                android:text="@string/label_not_applicable"
                android:onClick="onCheckboxClicked"/>
        </RelativeLayout>

        <include layout="@layout/layout_divider_horizontal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/FormLabel"
                android:text="@string/label_year_of_incorporation" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/margin_regular"
                android:layout_marginRight="@dimen/margin_large"
                android:text="@string/label_not_applicable"
                android:onClick="onCheckboxClicked"/>
        </RelativeLayout>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextField"
            android:hint="@string/hint_year"/>

        <include layout="@layout/layout_divider_horizontal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/FormLabel"
                android:text="@string/label_known_fors" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/margin_regular"
                android:layout_marginRight="@dimen/margin_large"
                android:text="@string/label_not_applicable"
                android:onClick="onCheckboxClicked"/>
        </RelativeLayout>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextField"
            android:hint="@string/hint_known_fors"/>

        <include layout="@layout/layout_divider_horizontal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/FormLabel"
                android:text="@string/label_description" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/margin_regular"
                android:layout_marginRight="@dimen/margin_large"
                android:text="@string/label_not_applicable"
                android:onClick="onCheckboxClicked"/>
        </RelativeLayout>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextField"
            android:hint="@string/hint_heading"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextField"
            android:hint="@string/hint_description"/>
    </LinearLayout>
</ScrollView>