<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/choose_equipment"
        android:text="@string/label_choose_equipment"
        android:layout_marginBottom="@dimen/margin_large"
        style="@style/FormLabel"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choose_equipment"
        android:layout_above="@+id/equipment_next_button"
        android:id="@+id/equipment_list">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="implement equipment list here"
                android:layout_marginBottom="@dimen/margin_large"
                style="@style/FormLabel"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/margin_regular"
                    android:paddingLeft="@dimen/padding_large"
                    android:paddingRight="@dimen/padding_large"
                    android:background="@drawable/button_bg"
                    android:textColor="@color/white"
                    android:text="@string/label_add_custom_equipment" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/equipment_next_button"
        android:text="@string/next"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:background="@color/theme_primary"/>
</RelativeLayout>
