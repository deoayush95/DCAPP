<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Transparent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="MyToolBar" parent="AppTheme">
        <item name="android:color">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>


    <style name="SmallDullText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="NavDrawerHeader" parent="android:Widget.TextView">
        <item name="android:layout_marginTop">@dimen/margin_huge</item>
        <item name="android:paddingLeft">@dimen/padding_large</item>
        <item name="android:paddingRight">@dimen/padding_regular</item>
        <item name="android:paddingBottom">@dimen/padding_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_regular</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="TextField" parent="android:Widget.Holo.Light.EditText">
        <item name="android:background">@drawable/text_field_background</item>
        <item name="android:layout_marginLeft">@dimen/margin_large</item>
        <item name="android:layout_marginRight">@dimen/margin_large</item>
        <item name="android:paddingLeft">@dimen/padding_regular</item>
        <item name="android:paddingRight">@dimen/padding_regular</item>
        <item name="android:paddingTop">@dimen/padding_regular</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
        <item name="android:minWidth">304dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="FormSpinner" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:padding">@dimen/padding_regular</item>
        <item name="android:layout_marginLeft">@dimen/margin_regular</item>
        <item name="android:layout_marginRight">@dimen/margin_regular</item>
        <item name="android:dividerHeight">0.5dp</item>
    </style>

    <style name="TextField.Small">
        <item name="android:minWidth">160dp</item>
    </style>

    <style name="TextField.Inline">
        <item name="android:minWidth">80dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_small</item>
        <item name="android:layout_marginRight">@dimen/margin_regular</item>
    </style>

    <style name="MultiSelectView">
        <item name="android:layout_marginLeft">@dimen/margin_large</item>
        <item name="android:layout_marginRight">@dimen/margin_large</item>
    </style>

    <style name="FormLabel" parent="android:Widget.TextView">
        <item name="android:layout_marginLeft">@dimen/margin_large</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
        <item name="android:layout_marginRight">@dimen/margin_large</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:textSize">@dimen/font_regular</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="CheckBox" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:layout_marginLeft">@dimen/margin_large</item>
        <item name="android:layout_marginRight">@dimen/margin_large</item>
        <item name="android:textSize">@dimen/font_regular</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="FormLabel.Inline" parent="android:Widget.TextView">
        <item name="android:layout_marginLeft">@dimen/margin_large</item>
        <item name="android:layout_marginRight">@dimen/margin_large</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/font_regular</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="RadioFieldGroup">
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/margin_regular</item>
        <item name="android:layout_marginBottom">@dimen/margin_regular</item>
    </style>
</resources>
